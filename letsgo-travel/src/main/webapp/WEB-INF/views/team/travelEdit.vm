    .nav-tabs-custom > .nav-tabs > li.active > a, .nav-tabs-custom > .nav-tabs > li.active:hover > a{color:#3c8dbc;}
    .nav-tabs-custom > .nav-tabs > li.active > a{color:#3c8dbc;}
    .form-horizontal .control-label{padding-right:4px;}
